{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <style>
        body{
            background-color: black;
        }
        hr {
            background-color:#555;
            border:0 none;
            height:1px;
            clear:both;
        }
        .container{
            color: white;
        }
    </style>
    <div class="container mt-3">
        <div class="row" style="justify-content: center">
            <div class="image_background"><img src="{{ trailer.link }}/images/background.jpg"></div>
            <div class="col-md-10">
                <h3 style="text-align: center; margin-top: 45px">{{ trailer.title }}</h3>
                <hr>
                <div>{{ trailer.description }}</div>
                <div class="mt-3"><a class="btn btn-outline-success" href="{{ home }}">Back</a> <a class="btn btn-outline-info" href="{{ trailer.link }}">Trailer Link</a></div>
            </div>
        </div>
    </div>
{% endblock %}